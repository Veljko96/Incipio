<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardElevation="3dp"
    app:contentPadding="1dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- OLD, for recycler-ver2? -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/commentator_logo"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textSize="22dp"
            android:text="Nikola Nikolic"
            android:id="@+id/commentaotr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/star_1"
            android:src="@drawable/star_full"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>