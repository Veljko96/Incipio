        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/channel_image"
            android:layout_width="60dp"
            android:layout_height="100dp"
            android:background="@color/colorRed"
            android:src="@drawable/sk1" />

        <ImageView
            android:id="@+id/channel_image_padding"
            android:layout_width="10dp"
            android:layout_height="100dp"
            android:background="@color/colorRed" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/game_description"
                android:layout_width="wrap_content"
                android:layout_height="68dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="38dp"
                android:layout_marginRight="38dp"
                android:layout_marginBottom="32dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="LA Lakers - Boston Celtics"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"
                app:fontFamily="@font/timeburnerbold" />

            <ImageView
                android:id="@+id/game_enter_image"
                android:layout_width="50dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom"
                android:layout_marginTop="0dp"
                android:src="@drawable/iconfinder_ic_keyboard_arrow_right" />

            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="60dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal">


                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="36dp"

                    android:layout_marginLeft="36dp"
                    android:layout_marginBottom="0dp"
                    android:progress="60" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>