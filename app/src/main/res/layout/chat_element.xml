<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView app:cardElevation="1dp"
    app:cardCornerRadius="2dp"
    app:cardUseCompatPadding="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorRed"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                android:text="Milos"
                android:id="@+id/chat_owner"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <ImageView
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/chat_dislikes"
                android:id="@+id/image_down"
                android:src="@drawable/ic_up_green"
                android:layout_width="20dp"
                android:layout_height="30dp" />

            <TextView
                android:gravity="center"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/image_down"
                android:text="15"
                android:id="@+id/chat_likes"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

            <ImageView
                android:layout_marginRight="5dp"
                android:id="@+id/image_up"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_down_red"
                android:layout_width="20dp"
                android:layout_height="30dp" />

            <TextView
                android:gravity="center"
                android:layout_toLeftOf="@id/image_up"
                android:layout_marginRight="2dp"
                android:text="5"
                android:id="@+id/chat_dislikes"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />

        </RelativeLayout>



        <TextView
            android:textStyle="italic"
            android:textSize="16dp"
            android:layout_margin="2dp"
            android:text="Ovo je primer teksta na forumu. Samo iznosim tekst dovoljne duzine. DObra ideja je da se ogranici na 200-300 karaktera."
            android:id="@+id/chat_body"
            android:inputType="text|textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_gravity="end"
            android:id="@+id/chat_options"
            android:src="@drawable/ic_three_dots"
            android:layout_width="60dp"
            android:layout_height="30dp" />

        <View
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorRed"/>

    </LinearLayout>


</android.support.v7.widget.CardView>